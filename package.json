{
  "name": "@imcat-ckim/catui-mobile",
  "version": "1.0.0",
  "description": "Mobile-first, touch-optimized UI framework based on IMCAT UI core with gesture support and mobile-native components",
  "homepage": "https://imcat.dev/mobile",
  "type": "module",
  "main": "dist/catui-mobile.js",
  "module": "dist/catui-mobile.js",
  "style": "dist/catui-mobile.css",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "set NODE_ENV=production && rollup -c && npm run build:css && npm run copy:fonts",
    "copy:fonts": "xcopy src\\fonts\\*.woff2 dist\\fonts\\ /Y /I 2>nul || mkdir dist\\fonts && copy src\\fonts\\*.woff2 dist\\fonts\\",
    "build:core": "rollup -c --environment BUILD:core",
    "build:modules": "rollup -c --environment BUILD:modules",
    "build:css": "sass src/styles/catui-mobile.scss dist/catui-mobile.css --style compressed --no-source-map && npm run build:css:modules",
    "build:css:modules": "sass src/modules/overlays/overlays.scss dist/modules/overlays/overlays.css --style compressed --no-source-map",
    "build:css:min": "sass src/styles/catui-mobile.scss dist/catui-mobile.min.css --style compressed",
    "minify": "terser dist/catui-mobile.js -o dist/catui-mobile.min.js --compress --mangle",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "serve": "http-server . -p 3001 -o",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "mobile",
    "touch",
    "gesture",
    "swipe",
    "framework",
    "spa",
    "zero-build",
    "lightweight",
    "es6",
    "pwa"
  ],
  "author": "IMCAT Team",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "http-server": "^14.1.1",
    "jsdoc": "^4.0.2",
    "jsdom": "^23.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.0",
    "rollup-plugin-scss": "^4.0.0",
    "sass": "^1.69.5",
    "terser": "^5.26.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
